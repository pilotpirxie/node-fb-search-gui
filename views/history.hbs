{{> header }}

<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">History</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-heading clearfix">
                        <h4 class="panel-title">Reports history</h4>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group">
                            {{#each reports}}
                                <a href="details/{{this.id}}" class="list-group-item list-group-item-action flex-column align-items-start">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">
                                            {{#if this.status}}
                                                <span class="badge bg-primary">DONE</span>
                                            {{else}}
                                                <span class="badge bg-warning">PENDING</span>
                                            {{/if}}
                                            {{this.createDate}}
                                        </h5>
                                        <small>{{this.params.lon}} {{this.params.lat}} ({{this.params.range}}km)</small>
                                    </div>
                                    <p class="mb-1">
                                        {{#each this.keywords}}
                                            {{this}}
                                        {{/each}}
                                    </p>
                                    <small></small>
                                </a>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- Row -->
    </div><!-- Main Wrapper -->
</div><!-- /Page Inner -->

{{> footer }}
