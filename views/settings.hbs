{{> header }}

<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">User settings</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-heading clearfix">
                        <h4 class="panel-title">User settings</h4>
                    </div>
                    <div class="panel-body">
                        <form method="post" action="./settings/change">
                            <div class="form-group">
                                <label for="contactNameField">Contact name</label>
                                <input type="text" class="form-control" id="contactNameField" name="contactName" placeholder="Contact name" value="{{contactName}}">
                            </div>
                            <div class="form-group">
                                <label for="invoiceInformation">Invoice information</label>
                                <textarea type="text" class="form-control" id="invoiceInformation" name="invoiceInformation" placeholder="Invoice information">{{invoiceInformation}}</textarea>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" {{#if newsletter}}checked{{/if}} id="newsletter" name="newsletter">
                                <label class="form-check-label" for="newsletter">I want to subscribe to E-mail Newsletter.</label>
                            </div>
                            <button type="submit" class="btn btn-primary">Change</button>
                        </form>
                    </div>
                </div>
            </div>
        </div><!-- Row -->
    </div><!-- Main Wrapper -->
</div><!-- /Page Inner -->

{{> footer }}
