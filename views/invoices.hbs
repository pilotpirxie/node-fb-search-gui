{{> header }}

<div class="page-inner">
    <div class="page-title">
        <h3 class="breadcrumb-header">Invoices</h3>
    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-heading clearfix">
                        <h4 class="panel-title">Invoices</h4>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group">
                            {{#each invoices}}
                                <a href="{{this.downloadURL}}"><li class="list-group-item"> <b>{{this.paymentStatus}} (${{this.amount}})</b><span class="badge badge-info" style="background-color: #0369d0;">{{this.createDate}}</span></li></a>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- Row -->
    </div><!-- Main Wrapper -->
</div><!-- /Page Inner -->

{{> footer }}
